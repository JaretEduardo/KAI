<UserControl x:Class="KAI_UI.Views.TrainingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="950"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="NeonCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF09101A"/>
            <Setter Property="BorderBrush" Value="#FF00D4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00D4FF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#00D4FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3300D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DocsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B9BB4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Path Data="M19,2L14,6.5V17.5L19,13V2M6.5,5C4.55,5 2.45,5.4 1,6.5V21.16C1,21.41 1.25,21.66 1.5,21.66C1.6,21.66 1.65,21.59 1.75,21.59C3.1,20.94 5.05,20.5 6.5,20.5C8.45,20.5 10.55,20.9 12,22C13.35,21.15 15.8,20.5 17.5,20.5C19.15,20.5 20.85,20.81 22.25,21.56C22.35,21.61 22.4,21.59 22.5,21.59C22.75,21.59 23,21.34 23,21.09V6.5C22.4,6.05 21.75,5.75 21,5.5V19C19.9,18.65 18.7,18.5 17.5,18.5C15.8,18.5 13.35,19.15 12,20V6.5C10.55,5.4 8.45,5 6.5,5Z"
                                      Fill="{TemplateBinding Foreground}" Width="14" Height="14" Margin="0,0,8,0" Stretch="Uniform"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1A1F2B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF00D4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource NeonCardStyle}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Setup Training" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Margin="0,0,0,25">
                    <TextBlock Text="1. Dataset Folder" Foreground="#8B9BB4" Margin="0,0,0,8"/>

                    <Border BorderBrush="#FF00D4FF" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Height="140" 
                            Background="#1100D4FF" 
                            Cursor="Hand"
                            AllowDrop="True"
                            Drop="Border_Drop">

                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding BrowseFolderCommand}"/>
                        </Border.InputBindings>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path Data="M20,18H4V8H20M20,6H12L10,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8A2,2 0 0,0 20,6Z"
                                  Fill="#00D4FF" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,10">
                                <Path.Effect>
                                    <DropShadowEffect Color="#00D4FF" BlurRadius="15"/>
                                </Path.Effect>
                            </Path>

                            <TextBlock Text="Drag Folder Here" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>

                            <TextBlock Text="or click to browse" 
                                       Foreground="#8B9BB4" 
                                       FontSize="11" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{Binding DatasetPath}" 
                               Foreground="#556677" 
                               FontSize="11" 
                               Margin="5,5,0,0" 
                               FontStyle="Italic"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,25">
                    <TextBlock Text="2. Output Model Name (.pt)" Foreground="#8B9BB4" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource NeonTextBoxStyle}" Text="{Binding ModelName, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                </StackPanel>

                <Button Grid.Row="3" Content="START TRAINING" Command="{Binding StartTrainingCommand}" Style="{StaticResource NeonButtonStyle}" Height="50" FontSize="16" FontWeight="Bold">
                    <Button.Effect>
                        <DropShadowEffect Color="#00D4FF" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                    </Button.Effect>
                </Button>

                <Button Grid.Row="5" Content="Read Documentation / Tutorial" Style="{StaticResource DocsButtonStyle}" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource NeonCardStyle}">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="Live Monitor" Foreground="White" FontSize="18" FontWeight="SemiBold" 
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="#00D4FF" Margin="0,0,5,0"/>
                        <TextBlock Text="Accuracy" Foreground="#8B9BB4" FontSize="12" Margin="0,0,15,0"/>
                        <Ellipse Width="8" Height="8" Fill="#FF4444" Margin="0,0,5,0"/>
                        <TextBlock Text="Loss" Foreground="#8B9BB4" FontSize="12"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Margin="0,15,0,0" Background="#05000000" BorderBrush="#2200D4FF" BorderThickness="1" CornerRadius="10" ClipToBounds="True">
                    <Grid>
                        <UniformGrid Columns="1" Rows="5">
                            <Border BorderBrush="#1100D4FF" BorderThickness="0,0,0,1"/>
                            <Border BorderBrush="#1100D4FF" BorderThickness="0,0,0,1"/>
                            <Border BorderBrush="#1100D4FF" BorderThickness="0,0,0,1"/>
                            <Border BorderBrush="#1100D4FF" BorderThickness="0,0,0,1"/>
                            <Border/>
                        </UniformGrid>

                        <Viewbox Stretch="Fill">
                            <Grid Height="500">

                                <Rectangle Width="1000" Height="500" Fill="Transparent" Visibility="Hidden"/>

                                <Polygon Points="{Binding LossFillPoints}" StrokeThickness="0">
                                    <Polygon.Fill>
                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                            <GradientStop Color="#4DFF4444" Offset="0"/>
                                            <GradientStop Color="#00FF4444" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Polygon.Fill>
                                </Polygon>

                                <Polygon Points="{Binding AccuracyFillPoints}" StrokeThickness="0">
                                    <Polygon.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4D00D4FF" Offset="0"/>
                                            <GradientStop Color="#0000D4FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Polygon.Fill>
                                </Polygon>

                                <Polyline Points="{Binding LossPoints}" 
                                          Stroke="#FF4444" 
                                          StrokeThickness="3" 
                                          StrokeLineJoin="Round">
                                    <Polyline.Effect>
                                        <DropShadowEffect Color="#FF4444" BlurRadius="5" ShadowDepth="0" Opacity="1"/>
                                    </Polyline.Effect>
                                </Polyline>

                                <Polyline Points="{Binding AccuracyPoints}" 
                                          Stroke="#00D4FF" 
                                          StrokeThickness="3" 
                                          StrokeLineJoin="Round">
                                    <Polyline.Effect>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="5" ShadowDepth="0" Opacity="1"/>
                                    </Polyline.Effect>
                                </Polyline>

                            </Grid>
                        </Viewbox>

                        <TextBlock Text="[ Waiting for training data... ]" 
                                   Foreground="#334455" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="14">
                            <TextBlock.Opacity>0.3</TextBlock.Opacity>
                        </TextBlock>
                    </Grid>
                </Border>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="System Logs" Foreground="#8B9BB4" FontSize="12" Margin="0,0,0,5"/>

                    <Border Grid.Row="1" Background="#FF050505" BorderBrush="#3300D4FF" BorderThickness="1" CornerRadius="8">
                        <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto" Margin="10">

                            <ScrollViewer.Resources>

                                <Style x:Key="ScrollThumb" TargetType="{x:Type Thumb}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border x:Name="thumbBorder" Background="#3300D4FF" CornerRadius="4"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#FF00D4FF"/>
                                                        <Setter TargetName="thumbBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#00D4FF" BlurRadius="8" ShadowDepth="0"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                                <Style TargetType="{x:Type ScrollBar}">
                                    <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                                    <Setter Property="Foreground" Value="#3300D4FF" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Width" Value="8" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                                                    <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                                        <Track.Thumb>
                                                            <Thumb Style="{StaticResource ScrollThumb}" />
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                            </ScrollViewer.Resources>

                            <TextBlock Text="{Binding LogOutput}" 
                                       SizeChanged="LogText_SizeChanged"
                                       FontFamily="Consolas, Courier New" 
                                       FontSize="12" 
                                       Foreground="#00D4FF"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <StackPanel Grid.Row="5">
                    <Grid Margin="0,0,0,10">
                        <ProgressBar Value="{Binding GpuUsage}" Maximum="100" Height="6" Background="#FF1A1F2B" Foreground="#00D4FF" BorderThickness="0">
                            <ProgressBar.Clip>
                                <RectangleGeometry Rect="0,0,1000,6" RadiusX="3" RadiusY="3"/>
                            </ProgressBar.Clip>
                        </ProgressBar>
                    </Grid>

                    <Grid>
                        <TextBlock Text="Ready" Foreground="#8B9BB4" HorizontalAlignment="Left" FontSize="12"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Path Data="M22,18V6A2,2 0 0,0 20,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18M11,13H13V15H11V13M11,9H13V11H11V9M7,13H9V15H7V13M7,9H9V11H7V9M15,13H17V15H15V13M15,9H17V11H15V9Z"
                                  Fill="#00D4FF" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding GpuUsageText}" Foreground="#00D4FF" FontWeight="SemiBold" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>