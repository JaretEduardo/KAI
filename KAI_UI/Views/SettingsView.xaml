<UserControl x:Class="KAI_UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="950"
             Background="Transparent">

    <UserControl.Resources>

        <Style x:Key="NeonCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBoxBorder" Width="22" Height="22" 
                                    BorderBrush="#00D4FF" BorderThickness="2" 
                                    CornerRadius="5" Background="#FF1A1F2B" 
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark" Data="M4,11 L9,16 L18,5" 
                                      Stroke="#00D4FF" StrokeThickness="3" 
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round" 
                                      StrokeLineJoin="Round" 
                                      Visibility="Collapsed">
                                    <Path.Effect>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="5" ShadowDepth="0"/>
                                    </Path.Effect>
                                </Path>
                            </Border>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#3300D4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="NeonCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF09101A"/>
            <Setter Property="BorderBrush" Value="#FF00D4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonSliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Ellipse Width="16" Height="16" Fill="#00D4FF" Stroke="#FFFFFF" StrokeThickness="2" Cursor="Hand">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonSliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="Background" Value="#FF1A1F2B"/>
            <Setter Property="BorderBrush" Value="#00D4FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="TrackBackground" Grid.Row="1" Height="6" CornerRadius="3" Background="#FF1A1F2B" Margin="5,0"/>

                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Background="#3300D4FF">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Border Height="6" CornerRadius="3" Background="{TemplateBinding Background}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Border Height="6" Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Style="{StaticResource NeonSliderThumbStyle}" VerticalAlignment="Center"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00D4FF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#00D4FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3300D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DocsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B9BB4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Path Data="M19,2L14,6.5V17.5L19,13V2M6.5,5C4.55,5 2.45,5.4 1,6.5V21.16C1,21.41 1.25,21.66 1.5,21.66C1.6,21.66 1.65,21.59 1.75,21.59C3.1,20.94 5.05,20.5 6.5,20.5C8.45,20.5 10.55,20.9 12,22C13.35,21.15 15.8,20.5 17.5,20.5C19.15,20.5 20.85,20.81 22.25,21.56C22.35,21.61 22.4,21.59 22.5,21.59C22.75,21.59 23,21.34 23,21.09V6.5C22.4,6.05 21.75,5.75 21,5.5V19C19.9,18.65 18.7,18.5 17.5,18.5C15.8,18.5 13.35,19.15 12,20V6.5C10.55,5.4 8.45,5 6.5,5Z"
                                      Fill="{TemplateBinding Foreground}" Width="14" Height="14" Margin="0,0,8,0" Stretch="Uniform"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NeonTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1A1F2B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF00D4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Border Style="{StaticResource NeonCardStyle}">

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                <ScrollViewer.Resources>
                    <Style x:Key="ScrollThumb" TargetType="{x:Type Thumb}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Border x:Name="thumbBorder" Background="#3300D4FF" CornerRadius="4"/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="thumbBorder" Property="Background" Value="#FF00D4FF"/>
                                            <Setter TargetName="thumbBorder" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#00D4FF" BlurRadius="8" ShadowDepth="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsDragging" Value="True">
                                            <Setter TargetName="thumbBorder" Property="Background" Value="#FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                        <Setter Property="Foreground" Value="#3300D4FF" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Width" Value="8" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                                        <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ScrollThumb}" />
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>

                <StackPanel Margin="35,30,45,30">

                    <TextBlock Text="Neural Architecture Configuration" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Adjust the internal parameters of the AI. Changes will apply to the next training session." Foreground="#8B9BB4" FontSize="14" Margin="0,0,0,40" TextWrapping="Wrap"/>

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Training Epochs:" Foreground="#00D4FF" FontSize="16" FontWeight="SemiBold" Width="140"/>
                            <TextBlock Text="{Binding Config.Epochs}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <Slider Grid.Row="1" Style="{StaticResource NeonSliderStyle}" 
                                Minimum="10" Maximum="500" TickFrequency="10" IsSnapToTickEnabled="True" 
                                Value="{Binding Config.Epochs}" Cursor="Hand"/>

                        <TextBlock Grid.Row="1" Text="Number of times the AI sees the entire dataset. Higher = smarter, but takes longer." 
                                   Foreground="#556677" FontSize="11" FontStyle="Italic" Margin="0,25,0,0"/>
                    </Grid>

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Batch Size:" Foreground="#00D4FF" FontSize="16" FontWeight="SemiBold" Width="120"/>
                            <TextBlock Text="{Binding Config.BatchSize}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <Slider Grid.Row="1" Style="{StaticResource NeonSliderStyle}" 
                                Minimum="16" Maximum="128" TickFrequency="16" IsSnapToTickEnabled="True" 
                                Value="{Binding Config.BatchSize}" Cursor="Hand"/>

                        <TextBlock Grid.Row="1" Text="Defines how many images are processed at once. Lower this if you run out of VRAM." 
                                   Foreground="#556677" FontSize="11" FontStyle="Italic" Margin="0,25,0,0"/>
                    </Grid>

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Base Filters:" Foreground="#00D4FF" FontSize="16" FontWeight="SemiBold" Width="120"/>
                            <TextBlock Text="{Binding Config.BaseFilters}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <Slider Grid.Row="1" Style="{StaticResource NeonSliderStyle}" 
                                Minimum="16" Maximum="64" TickFrequency="16" IsSnapToTickEnabled="True" 
                                Value="{Binding Config.BaseFilters}" Cursor="Hand"/>

                        <TextBlock Grid.Row="1" Text="The depth of the convolutional layers. Higher values capture more complex visual features." 
                                   Foreground="#556677" FontSize="11" FontStyle="Italic" Margin="0,25,0,0"/>
                    </Grid>

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Hidden Neurons:" Foreground="#00D4FF" FontSize="16" FontWeight="SemiBold" Width="130"/>
                            <TextBlock Text="{Binding Config.HiddenNeurons}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <Slider Grid.Row="1" Style="{StaticResource NeonSliderStyle}" 
                                Minimum="128" Maximum="1024" TickFrequency="128" IsSnapToTickEnabled="True" 
                                Value="{Binding Config.HiddenNeurons}" Cursor="Hand"/>

                        <TextBlock Grid.Row="1" Text="The size of the final 'brain' logic. More neurons increase intelligence but reduce speed." 
                                   Foreground="#556677" FontSize="11" FontStyle="Italic" Margin="0,25,0,0"/>
                    </Grid>

                    <Border Background="#0500D4FF" BorderBrush="#3300D4FF" BorderThickness="1" CornerRadius="10" Padding="20" Margin="0,0,0,30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox Grid.Row="0" Content="Enable Early Stopping (Prevent Overfitting)" 
                                      IsChecked="{Binding Config.UseEarlyStopping}" 
                                      Style="{StaticResource NeonCheckBoxStyle}" Margin="0,0,0,15"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" IsEnabled="{Binding Config.UseEarlyStopping}">
                                <TextBlock Text="Target Loss:" Foreground="#00D4FF" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Text="{Binding Config.TargetLoss}" Style="{StaticResource NeonTextBoxStyle}" Width="80" HorizontalContentAlignment="Center"/>
                                <TextBlock Text="If the loss falls below this number, the AI stops training automatically." Foreground="#556677" FontSize="11" FontStyle="Italic" VerticalAlignment="Center" Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Margin="0,20,0,0">

                        <Button Content="Read Documentation / Tutorial" 
                                Style="{StaticResource DocsButtonStyle}" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center"/>

                        <Button Content="RESTORE DEFAULTS" 
                                Command="{Binding RestoreDefaultsCommand}" 
                                Style="{StaticResource NeonButtonStyle}" 
                                Height="40" Width="180" 
                                HorizontalAlignment="Right">
                            <Button.Effect>
                                <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Button.Effect>
                        </Button>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>